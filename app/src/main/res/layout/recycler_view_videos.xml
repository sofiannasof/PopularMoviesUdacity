<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/movie_trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/card_padding"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/trailer_title" />

    <RelativeLayout
        android:id="@+id/movie_trailer"
        android:layout_width="@dimen/trailer_width"
        android:layout_height="@dimen/trailer_height"
        android:layout_below="@id/movie_trailer_title"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/thumb_video"
            android:layout_width="@dimen/trailer_width"
            android:layout_height="@dimen/trailer_height"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/movie_trailer_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_youtube" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/movie_trailer_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_trailer"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_share" />

</RelativeLayout>